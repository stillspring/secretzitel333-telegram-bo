# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Required: Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Required: Your Telegram user ID (get from @userinfobot)
OWNER_ID=your_user_id_here

# Optional: The key phrase that triggers special response (default: "secret")
KEY_PHRASE=secret

# Optional: Response when key phrase is detected
KEY_RESPONSE=This is the prepared response for the key phrase!

# Optional: Random responses for other messages
# Can be JSON array or comma-separated values
OTHER_RESPONSES=["Hello! How can I help you today?", "Thanks for your message!", "I'm here if you need anything else.", "Have a great day!", "Thanks for reaching out!"]

# Optional: Case sensitivity for key phrase matching (default: false)
CASE_SENSITIVE=false

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
